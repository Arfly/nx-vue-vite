{
  "name": "vite-vue",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "vite-vue/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/vite-vue",
        "main": "vite-vue/src/index.ts",
        "tsConfig": "vite-vue/tsconfig.lib.json",
        "assets": [
          "vite-vue/*.md",
          {
            "input": "./vite-vue/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./vite-vue/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./vite-vue",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./vite-vue",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs vite-vue {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "vite-vue/**/*.ts",
          "vite-vue/package.json",
          "vite-vue/executors.json",
          "vite-vue/generators.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "vite-vue/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
